{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["es6", "dom"],
    "noEmit": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "importsNotUsedAsValues": "remove",
  },
  "exclude": [
    "node_modules",
  ],
}
